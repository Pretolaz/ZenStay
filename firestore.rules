rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // ⚠️ ATENÇÃO: Estas regras permitem que QUALQUER PESSOA leia e escreva no seu banco de dados.
      // Útil para desenvolvimento, mas deve ser restringido antes de ir para produção real.
      allow read, write: if true;
    }
  }
}
